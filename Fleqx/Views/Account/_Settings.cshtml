@using Fleqx.Data.DatabaseModels
@model Fleqx.Models.AccountModel
<div class="modal fade animated bounceInUp" id="accountEditModal" tabindex="-1" role="dialog">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title">Edit Account Details</h4>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                @using (Html.BeginForm("Edit", "Account", FormMethod.Post, new { id = "accountEditForm", @class = "form signup-form center-block", autocomplete = "off" }))
                {
                    @Html.HiddenFor(model => model.Id);
                    <label class="signup-label">Username</label>
                    @Html.TextBoxFor(model => model.UserName, new { @class = "form-control", autocomplete = "off" })
                    <label class="signup-label">New Password</label>
                    @Html.PasswordFor(model => model.Password, new { @class = "form-control", autocomplete = "new-password" })
                    <label class="signup-label">First name</label>
                    @Html.TextBoxFor(model => model.FirstName, new { @class = "form-control" })
                    <label class="signup-label">Last name</label>
                    @Html.TextBoxFor(model => model.LastName, new { @class = "form-control" })
                    <label class="signup-label">Team</label>
                    @Html.DropDownListFor(model => model.Team, ListControlHelper.Teams, new { @class = "form-control" })
                    <button type="submit" form="accountEditForm" class="center-block form-button">Submit</button>
                }
            </div>
        </div>
    </div>
</div>