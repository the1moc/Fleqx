@using Fleqx.Models

<div class="graph-container">
    <div class="graph-selections">
        <button class="graphMyTasks graphButton standard-button" data-url='@Url.Action("GetTaskChart", "Graph", new { tasksDesired = "mytasks" })'>My Tasks</button>
        <button class="graphTeamTasks graphButton standard-button" data-url='@Url.Action("GetTaskChart", "Graph", new { tasksDesired = "teamtasks" })'>Team Tasks</button>
        <button class="graphAllTasks graphButton standard-button" data-url='@Url.Action("GetTaskChart", "Graph", new { tasksDesired = "alltasks" })'>All Tasks</button>
        <button class="graphLoggedIn graphButton standard-button" data-url='@Url.Action("GetUserChart", "Graph", new { tasksDesired = "loggedin" })'>Logged In Currently</button>
        <button class="chartEstimatedDays graphButton standard-button" data-url='@Url.Action("GetDaysChart", "Graph")'>User Estimated Days</button>
        <button class="chartCompletedDays graphButton standard-button" data-url='@Url.Action("GetCompletedDays", "Graph")'>User Completed Days</button>
    </div>
    <h1 class="graph-title"></h1>
    <div class="graph-subcontainer">
        <canvas id="chart"></canvas>
    </div>
</div>