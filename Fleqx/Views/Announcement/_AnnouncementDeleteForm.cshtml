@using Fleqx.Data.DatabaseModels
@using Microsoft.AspNet.Identity
@model Fleqx.Models.AnnouncementModel

<div class="modal fade animated bounceInUp" id="announcementDeleteModal" tabindex="-1" role="dialog">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title">Edit Announcement</h4>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                @using (Html.BeginForm("DeleteAnnouncement", "Announcement", FormMethod.Post, new { id = "announcementDeleteForm", @class = "form announcement-form center-block", autocomplete = "off" }))
                {
                    @Html.Hidden("announcementId", (string)ViewBag.AnnouncementId);
                    <p>Are you sure you want to delete this announcement?</p>
                    <button type="submit" form="announcementDeleteForm" class="center-block form-button">Yes</button>
                    <button type="button" class="center-block form-button cancel-form">No</button>
                }
            </div>
        </div>
    </div>
</div>