@using Fleqx.Data.DatabaseModels
@using Microsoft.AspNet.Identity
@model Fleqx.Models.AnnouncementModel

<div class="modal fade animated bounceInUp" id="announcementEditModal" tabindex="-1" role="dialog">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title">Edit Announcement</h4>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                @using (Html.BeginForm("EditAnnouncement", "Announcement", FormMethod.Post, new {id = "announcementEditForm", @class = "form announcement-form center-block", autocomplete = "off"}))
                {
                    @Html.HiddenFor(model => model.AnnouncementID)
                    <label class="signup-label">Title</label>
                    @Html.TextBoxFor(model => model.AnnouncementTitle, new {@class = "form-control", autocomplete = "off"})
                    <label class="signup-label">Content</label>
                    @Html.TextAreaFor(model => model.AnnouncementContent, new {cols = "80", rows = "6", @class = "form-control", autocomplete = "new-password"})
                    <label class="signup-label">Importance</label>
                    @Html.DropDownListFor(model => model.AnnouncementImportance, ListControlHelper.Importance, new {@class = "form-control"})
                    <button type="submit" form="announcementEditForm" class="center-block form-button">Submit</button>
                }
            </div>
        </div>
    </div>
</div>