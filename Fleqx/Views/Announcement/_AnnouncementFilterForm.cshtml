@using Fleqx.Data.DatabaseModels
@model Fleqx.Models.AnnouncementFilterModel

@using (Html.BeginForm("FilterAnnouncements", "Announcement", FormMethod.Post, new { id = "announcementFilterForm", @class = "form filter-form announcement-filter center-block", autocomplete = "off" }))
{
    <div class="row">
        <div class="form-group col-xs-4">
            <label class="filter-form-label">Start Date</label>
            @Html.TextBoxFor(model => model.StartDate, new { @class = "form-control date", @Value = Model.StartDate.ToString("yyyy-MM-dd") })
        </div>
        <div class="form-group col-xs-4">
            <label class="filter-form-label">End Date</label>
            @Html.TextBoxFor(model => model.EndDate, new { @class = "form-control date", @Value = Model.EndDate.ToString("yyyy-MM-dd") })
        </div>
        <div class="form-group col-xs-4">
            <label class="filter-form-label">Importance</label>
            @Html.DropDownListFor(model => model.AnnouncementImportance, ListControlHelper.Importance, new { @class = "form-control", @Value = Model.AnnouncementImportance })
        </div>
        <div class="form-group col-xs-12">
            <button type="submit" form="announcementFilterForm" class="standard-button center-block">Apply filter</button>
        </div>
    </div>
}
